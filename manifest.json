{
	"manifest_version": 3,
	"name": "JS Recon Buddy",
	"version": "1.0",
	"description": "Scans page scripts for bug bounty reconnaissance.",
	"permissions": [
		"activeTab",
		"scripting",
		"storage"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action": {
		"default_title": "Run JS Recon Scanner",
		"default_popup": "src/popup/popup.html"
	},
	"background": {
		"service_worker": "src/background/background.js"
	},
	"web_accessible_resources": [
		{
			"resources": [
				"src/overlay/overlay.html",
				"src/content/rules.js"
			],
			"matches": [
				"<all_urls>"
			]
		}
	]
}